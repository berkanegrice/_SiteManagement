@model UploadRegisterViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="text-center">  
    <h1 class="display-4">Employee Dropdown</h1>  
  
    <form asp-action="FileItemDropdown" asp-controller="File" method="post">  
  
        <div class="row">  
            <div class="col-md-4">  
                <select id="drpEmpList" class="form-control" asp-for="EmployeeId" asp-items="@(new SelectList(Model.UploadRegisterList, "Value", "Text"))">  
                    <option value="">--Select--</option>  
                </select>  
                <input type="hidden" asp-for="EmployeeId" />  
                 
            </div>  
            <div class="col-md-2">  
                <input type="submit" name="btnSubmit" value="Submit" class="btn btn-success" />  
            </div>  
        </div>  
  
    </form>  
</div>  
